{
  "name": "@nodis/lhc",
  "version": "2.1.0",
  "description": "Frontend project to build all backend schemas into a NPM package",
  "repository": "https://github.com/nodis-com-br/lhc.git",
  "author": "Thiago Oliveira <thiago.oliveira@nodis.com.br>",
  "contributors": [
    "Yuri Azevedo <yuri.azevedo@nodis.com.br>"
  ],
  "devDependencies": {
    "@nodis/math": "1.1.0",
    "git-cz": "3.3.0",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "yarn-run-all": "3.1.1"
  },
  "dependencies": {
    "@graphql-codegen/core": "1.9.1",
    "@graphql-codegen/typescript": "1.9.1",
    "@types/dotenv": "8.2.0",
    "@types/node": "12.12.21",
    "axios": "0.19.0",
    "change-case": "4.1.1",
    "dotenv": "8.2.0",
    "graphql": "14.5.8",
    "rollup": "1.27.13",
    "rollup-plugin-typescript2": "0.25.3",
    "ts-node": "8.5.4",
    "typescript": "3.7.2"
  },
  "scripts": {
    "fetch-schemas": "ts-node src/index.ts",
    "publish-package": "yarn publish --access restricted",
    "build": "ts-node src/buildPackages.ts",
    "clean": "run-s clean:**",
    "clean:schemas": "find ./schemas/* -name \"*.ts\" -exec rm {} \\;",
    "clean:dist": "rm -rf ./dist/*",
    "clean:yarn": "rm -rf node_modules yarn.lock && yarn",
    "lint": "run-s code-style:**",
    "code-style:typescript": "tsc --noEmit",
    "code-style:prettier": "prettier --check './**/*.{js,ts,tsx}'",
    "format": "run-s format:**",
    "format:prettier": "prettier --write './**/*.{js,ts,tsx}'",
    "cm": "git add . && git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn format:prettier",
      "git add"
    ]
  }
}
